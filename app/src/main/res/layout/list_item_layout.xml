<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color_pm"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:padding="24dp">
    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="Product Name" />
        <TextView
            android:id="@+id/txtProductId"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:text="Product Id" />
        <ImageView
            android:id="@+id/imgViewPrImgList"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="100dp"/>
       <androidx.cardview.widget.CardView
           android:backgroundTint="@color/purple"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:layout_width="wrap_content"
               android:id="@+id/txtPrice"
               android:layout_alignParentStart="true"
               android:layout_marginLeft="@android:dimen/app_icon_size"
               android:text=""
               android:layout_gravity="center"
               android:layout_height="match_parent"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_alignParentStart="true"
               android:text="Price"
               android:layout_gravity="center"
               android:layout_height="match_parent"/>
       </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
         android:id="@+id/crdDiscount"
         android:layout_width="match_parent"
         android:backgroundTint="@color/purple"
         android:layout_marginTop="10dp"
         android:layout_height="match_parent">
         <TextView
             android:layout_width="wrap_content"
             android:layout_gravity="center"
             android:layout_alignParentStart="true"
             android:text="Discount"
             android:layout_height="match_parent"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_gravity="center"
             android:id="@+id/txtDiscount"
             android:layout_marginLeft="@android:dimen/app_icon_size"
             android:layout_alignParentStart="true"
             android:layout_height="match_parent"/>
     </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="@color/purple"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:text="Quantity"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txtQty"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:textSize="20dp"
                    android:text="Order" />

                <EditText
                    android:id="@+id/txtOrderQty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/custome_textbox"
                    android:drawableLeft="@drawable/shopping_cart"
                    android:textSize="10dp"
                    android:hint="Order QTY"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="10dp"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/btnOrder"
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/shopping_cart"
                    android:backgroundTint="@color/purple"
                    android:textSize="15dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
