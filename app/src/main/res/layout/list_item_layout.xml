<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color_pm"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="Product Name"
        android:textSize="25sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgViewPrImgList"
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtProductId"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:visibility="invisible"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:text="Product Id"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:layout_width="wrap_content"
                       android:textColor="@color/black"
                       android:layout_height="match_parent"
                       android:layout_gravity="left"
                       android:text="Price" />
                   <TextView
                       android:id="@+id/txtPrice"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="40dp"
                       android:layout_gravity="left"
                       android:textColor="@color/black"
                       android:text="Price" />
               </LinearLayout>

                <LinearLayout
                    android:id="@+id/lstDiscount"
                    android:layout_width="match_parent"
                    android:background="@color/clearRed"
                    android:gravity="center"
                    android:layout_height="30dp">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:textColor="@color/black"
                        android:text="Discount" />
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/txtDiscount"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="200LKR" />
                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lstOrderPanel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/txtOrderQty"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custome_textbox"
                            android:textAlignment="center"
                            android:textSize="10dp"
                            android:inputType="number"
                            android:hint="1.00"
                            android:maxLength="2"/>
                        <Button
                            android:id="@+id/btnOrder"
                            android:text="order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:backgroundTint="@color/purple"
                            android:drawableLeft="@drawable/shopping_cart"/>
                        <TextView
                            android:id="@+id/txtQty"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:text="Qty" />
                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
