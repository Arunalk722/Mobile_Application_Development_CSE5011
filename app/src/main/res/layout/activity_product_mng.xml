<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/bg_color_pm"
    tools:context=".ProductMngActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:background="@drawable/custome_textbox">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:backgroundTint="@color/purple"
                        android:drawableLeft="@drawable/cake"
                        android:text="Product Manage"
                        android:textSize="30dp"
                        app:cornerRadius="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:background="@drawable/custome_textbox">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:padding="24dp">
                    <EditText
                        android:id="@+id/txtProductId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:background="@drawable/custome_textbox"
                        android:hint="000001"
                        android:inputType="number"
                        android:padding="8dp"
                        android:layout_marginTop="20dp"
                        tools:ignore="MissingConstraints" />
                    <Button
                        android:id="@+id/btnFoundProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Find"/>

                    <EditText
                        android:id="@+id/txtProductName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custome_textbox"
                        android:hint="Product Name"
                        android:inputType="text"
                        android:padding="15dp"
                        android:layout_marginTop="20dp" />
                    <EditText
                        android:id="@+id/txtProductPrice"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custome_textbox"
                        android:hint="Price"
                        android:inputType="numberDecimal"
                        android:padding="15dp"
                        android:layout_marginTop="20dp" />
                    <EditText
                        android:id="@+id/txtQty"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custome_textbox"
                        android:hint="Quantity"
                        android:inputType="numberDecimal"
                        android:padding="15dp"
                        android:layout_marginTop="20dp" />
                    <EditText
                        android:id="@+id/txtDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custome_textbox"
                        android:hint="Discount(20%)"
                        android:inputType="datetime"
                        android:padding="15dp"
                        android:layout_marginTop="20dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="90dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:background="@drawable/custome_textbox">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:padding="10dp">
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="@color/purple"
                        android:text="Save"
                        android:drawableLeft="@drawable/invoice"
                        android:textSize="20dp"
                        app:cornerRadius="20dp" />
                    <ProgressBar
                        android:id="@+id/prgBarSave"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
